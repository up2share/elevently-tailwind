<div class="grid gap-6 md:grid-cols-2">
  {%- for post in postslist | reverse %}
  <article class="bg-white shadow-md rounded-lg p-4 border border-gray-200 hover:shadow-lg transition-shadow">
    <a href="{{ post.url }}" class="block">
      <h2 class="text-lg font-bold text-gray-800 hover:text-blue-600 transition-colors mt-0 mb-2">
        {% if post.data.title %}
          {{ post.data.title }}
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
      </h2>
    </a>
    <time class="block text-gray-500 text-sm mb-4" datetime="{{ post.date | htmlDateString }}">
      {{ post.date | readableDate("LLLL yyyy") }}
    </time>
    <p class="text-gray-700 mb-4">
      {% if post.data.description %}
        {{ post.data.description }}
      {% else %}
        A brief description of this article could go here if provided.
      {% endif %}
    </p>
    <div class="mt-auto">
      <a href="{{ post.url }}"
         class="inline-block px-4 py-2 text-sm font-medium border border-transparent rounded-full bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-white hover:from-pink-500 hover:via-purple-500 hover:to-blue-500 hover:shadow-md transition-all">
        Read more â†’
      </a>
    </div>
  </article>
  {%- endfor %}
</div>
